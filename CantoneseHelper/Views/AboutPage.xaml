<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CantoneseHelper.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CantoneseHelper.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource DesktopAcrylicTransparentBrush}">
        <StackPanel Orientation="Vertical" Padding="8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                        <HyperlinkButton Content="Version" NavigateUri="" VerticalAlignment="Center"/>
                        <TextBlock x:Name="AppVersionTextBlock" IsTextSelectionEnabled="True" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                        <HyperlinkButton Content="Website" NavigateUri="https://jyutping.app" VerticalAlignment="Center"/>
                        <TextBlock Text="https://jyutping.app" IsTextSelectionEnabled="True" FontFamily="{StaticResource FixedWidth}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                        <HyperlinkButton Content="Source Code" NavigateUri="https://github.com/yuetyam" VerticalAlignment="Center"/>
                        <TextBlock Text="https://github.com/yuetyam" IsTextSelectionEnabled="True" FontFamily="{StaticResource FixedWidth}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                        <HyperlinkButton Content="Telegram Group" NavigateUri="https://t.me/jyutping" VerticalAlignment="Center"/>
                        <TextBlock Text="https://t.me/jyutping" IsTextSelectionEnabled="True" FontFamily="{StaticResource FixedWidth}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                        <HyperlinkButton Content="QQ Group" NavigateUri="https://jq.qq.com/?k=4PR17m3t" VerticalAlignment="Center"/>
                        <TextBlock Text="293148593" IsTextSelectionEnabled="True" FontFamily="{StaticResource FixedWidth}" VerticalAlignment="Center"/>
                </StackPanel>
        </StackPanel>
</Page>
